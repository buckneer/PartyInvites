@model PartyInvites.Models.GuestResponse

@{}

<div class="mx-auto mt-5 d-flex justify-content-center align-items-center flex-column b-1 border-primary">
    <form class="d-flex flex-column" asp-action="RsvpForm" method="post">
        <div class="form-group">
            <label class="form-text" asp-for="Name">Your name: </label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label class="form-text" asp-for="Email">Your email: </label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="form-group">
            <label class="form-text" asp-for="Phone">Your phone: </label>
            <input class="form-control" asp-for="Phone" />
        </div>

        <div class="form-group"> 
            <label class="form-text" asp-for="WillAttend">Are you gonna come? </label>
            <select class="form-control" asp-for="WillAttend">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <button class="btn btn-dark mt-5">Save</button>
    </form>
</div>